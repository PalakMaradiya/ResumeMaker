<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SplashActivity2"
    android:background="#FDF4F5">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp">


        <ImageView
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/globe"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_200sdp"
            android:layout_weight="1"
            android:src="@drawable/i1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/i3"/>
    </LinearLayout>
<!--    logo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">



            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/r" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="workruti"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#87CBB9"
                    android:textSize="@dimen/_20ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESUME BILDER"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#87CBB9" />

        </LinearLayout>

    </LinearLayout>

<!--    title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Create a job  Winning resume in just a few steps"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"/>


        <!--    Button-->

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSignup"
                android:text="Sign Up"
                android:background="@drawable/button"
                android:backgroundTint="#5D9C59"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/rectangle_button"
                android:text="Login"/>

        </LinearLayout>

          <TextView
              android:layout_marginTop="@dimen/_20sdp"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="-------------------------- OR--------------------------"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/imgGoogle"
            android:background="@null"
            android:src="@drawable/g1" />


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/imgfacebook"
            android:background="@null"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@drawable/facebook" />
    </LinearLayout>



    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="By Signing Up for workrut Resume Builder You agree to our"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5D9C59"
        android:text="Terms of Service and Privacy Policy"/>
</LinearLayout>